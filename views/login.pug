doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login - My Grocery Buddy
    link(rel="stylesheet", href="/css/style.css")
  
  body
    .auth-container
      .auth-card
        .auth-header
          h1 ðŸ›’ My Grocery Buddy
          p Welcome back! Login to your account
        
        //- Display backend messages
        if message
          .message(class=message.includes('âœ…') || message.toLowerCase().includes('success') ? 'success' : 'error')
            = message
        
        //- Success alert (hidden by default)
        #successAlert.message.success(style="display: none;")
          |  Login successful! Redirecting
        
        form#loginForm.auth-form(action="/login" method="POST" novalidate)
          .form-group
            label.required(for="emailOrUsername") Email or Username
            input#emailOrUsername.form-input(
              type="text" 
              name="emailOrUsername" 
              placeholder="Enter email or username"
              required
            )
            .error-text#emailError
          
          .form-group
            label.required(for="password") Password
            input#password.form-input(
              type="password" 
              name="password" 
              placeholder="Enter password"
              required
            )
            .error-text#passwordError
          
          button.btn.btn-primary(type="submit") 
            span Login
        
        .auth-footer
          p Don't have an account? 
            a(href="/register") Register here

    script(src="/js/login.js")